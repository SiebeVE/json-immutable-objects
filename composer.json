{
    "name": "arnedesmedt/json-immutable-objects",
    "type": "library",
    "description": "Immutable objects with a json schema",
    "homepage": "https://github.com/arnedesmedt/json-immutable-objects",
    "license": "MIT",
    "authors": [
        {
            "name": "Arne De Smedt",
            "email": "arnedesmdt@gmail.com",
            "homepage": "https://github.com/arnedesmedt"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2",
        "event-engine/php-json-schema": "~3.0",
        "phpdocumentor/reflection-docblock": "~5.0",
        "symfony/yaml": "~6.0 || ~7.0",
        "symfony/http-kernel": "~6.0 || ~7.0"
    },
    "require-dev" : {
        "arnedesmedt/value-objects": "~0.1",
        "doctrine/coding-standard": "~11.0",
        "icanhazstring/composer-unused": "~0.1",
        "phpmd/phpmd": "~2.0",
        "phpro/grumphp": "~2.0",
        "phpstan/phpstan": "~1.0",
        "phpunit/phpunit": "~9.0",
        "rector/rector": "~0.1",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "ADS\\JsonImmutableObjects\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADS\\JsonImmutableObjects\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        },
        "sort-packages": true
    },
    "scripts-descriptions": {
        "tests": "Run all tests"
    },
    "scripts": {
        "tests": [
            "vendor/bin/composer-unused",
            "vendor/bin/phpcs",
            "vendor/bin/phpstan analyze --no-progress",
            "vendor/bin/phpmd src text phpmd.xml",
            "vendor/bin/phpmd tests text phpmd-tests.xml",
            "vendor/bin/rector --dry-run --no-progress-bar",
            "vendor/bin/phpunit"
        ]
    }
}
